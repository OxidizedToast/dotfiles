alias rd="rusty-man"
alias lock="swaylock"
alias hx="helix"
alias waybar-reload="pkill waybar && waybar & disown"
#edit file
alias ef="fzf-tmux -p | xargs nvim"
#view img
alias img="sxiv"
alias video="vlc"
alias audio="~/helpful/audioControl.sh"
alias screenshot="~/helpful/screenshot.sh"
